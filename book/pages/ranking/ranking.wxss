.top {
}

.title {
  display: flex;
  justify-content: space-around;
  background: #f2f2f2;
  line-height: 80rpx;
}

.linebg {
  border-bottom: 2px solid red;
}
.goodsdetails {
  /* border-top: 1px solid black; */
  /* margin-top: 148rpx; */
  overflow: hidden;
}

.item {
  margin-right: 30rpx;
  display: inline-block;
}

.bgcolor {
  color: #f45;
}

.goods {
  display: flex;
  border-bottom: 1px solid #f2f2f2;
  padding: 20rpx;
  overflow: hidden;
}

.img {
  width: 30%;
  height: 350rpx;
  margin-right: 3%;
}

.img image {
  width: 100%;
  height: 100%;
}

.goodsmsg {
  width: 66%;
  position: relative;
}

.goodstitle {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 22rpx;
}

.author {
  font-size: 26rpx;
  color: #a2a2a2;
  margin-bottom: 22rpx;
}

.shortIntro {
  font-size: 26rpx;
  color: #a2a2a2;
  display: -webkit-box;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical; /*子元素排列 vertical（竖排）*/
  -webkit-line-clamp: 3; /*设置显示的多少行。*/
  overflow: hidden;
  text-overflow: ellipsis;
}